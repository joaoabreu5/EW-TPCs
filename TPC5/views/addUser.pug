extends layout

block content
	.w3-card-4
	header.w3-container.w3-green
		h1 New User

	form.w3-container(method="POST")
		fieldset
			legend: h3: b Add User
			label: b Name
			input.w3-input.w3-round(type="text" name="name")

		button.w3-btn.w3-round.w3-margin-top.w3-margin-bottom.w3-margin-right.w3-green(type="submit") Register
		a.w3-btn.w3-round.w3-margin-top.w3-margin-bottom.w3-margin-right.w3-red(href="/") Cancel

	footer.w3-container.w3-blue
		h5 Generated by A91755 in #{new Date()}
