extends layout

block content
	.w3-card-4
		header.w3-container.w3-green
			h1 Task Manager
		
		ul.w3-ul
			li: h3: b Change Task Status to 'Done'
			li
				b What: 
				span.task-value #{task.what}
			li 
				b Who: 
				span.task-value #{task.who}    
			li 
				b Duedate: 
				span.task-value #{task.date}
			li 
				b Description: 
				span.task-value #{task.desc}
			li 
				b Done: 
				span.task-value #{task.done}

		.w3-margin-left    
			a.w3-btn.w3-round.w3-margin4.w3-green(href="/tasks/done/" + task.id + "/confirm") Confirm
			a.w3-btn.w3-round.w3-margin.w3-red(href="/") Cancel

		footer.w3-container.w3-blue
			h5 Generated by A91755 in #{new Date()}
